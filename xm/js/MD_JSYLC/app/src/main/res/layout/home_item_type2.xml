<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp63"
    app:cardBackgroundColor="#3D3D3D"
    app:cardCornerRadius="@dimen/dp6">

    <FrameLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="@dimen/dp62"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="@dimen/dp5"
                android:lines="1"
                android:gravity="center|start"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fly"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center"
        android:background="@drawable/w_m_bg"
        android:visibility="gone"
      >

        <TextView
            android:id="@+id/isweifu"
            android:layout_width="@dimen/dp98"
            android:layout_height="@dimen/dp35"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="@string/forworld"
            android:textColor="#ff7575"
            android:textSize="@dimen/sp13" />
    </FrameLayout>
</android.support.v7.widget.CardView>

