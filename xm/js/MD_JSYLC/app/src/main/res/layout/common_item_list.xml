<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp25"
    android:layout_marginRight="@dimen/dp25"
    android:layout_marginTop="@dimen/dp5"
    app:cardBackgroundColor="#444444"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:id="@+id/cradview_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/item_app_icon"
                android:layout_width="@dimen/dp105"
                android:layout_height="@dimen/dp100"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/item_icon"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp70"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#333333"
                    app:civ_border_width="0dp"
                    app:civ_fill_color="#363636" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/sdg"
                android:textColor="#fff"
                android:textSize="@dimen/sp16" />


            <LinearLayout
                android:id="@+id/cenr"
                android:layout_width="@dimen/dp42"
                android:layout_height="match_parent"
                android:background="#363636"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/down_app"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:paddingTop="@dimen/dp10"
                    android:text="WEB"
                    android:textColor="#444444"
                    android:textSize="@dimen/sp13" />

                <ImageView
                    android:id="@+id/down"
                    android:layout_width="@dimen/dp33"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:src="@mipmap/icon_web" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.kmjd.jsylc.zxh.widget.LabelView xmlns:lv="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp29"
            android:layout_gravity="top|start"
            lv:lv_background_color="#FF9600"
            lv:lv_fill_triangle="true"
            lv:lv_gravity="TOP_LEFT"
            lv:lv_text="@string/hot_show"
            android:id="@+id/hot_text"
            lv:lv_text_all_caps="false"
            lv:lv_text_bold="true"
            lv:lv_text_color="@android:color/white"
            lv:lv_text_size="@dimen/sp11" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fly_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/w_m_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/weifu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:text="@string/wei_hu"
            android:textColor="#ff7575"
            android:textSize="@dimen/sp13" />
    </FrameLayout>
</android.support.v7.widget.CardView>