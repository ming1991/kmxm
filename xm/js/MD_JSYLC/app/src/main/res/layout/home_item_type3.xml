<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp63"
    app:cardCornerRadius="@dimen/dp6">

    <ImageView
        android:id="@+id/iv_left"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp30"
        android:gravity="center|start"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />

    <FrameLayout
        android:id="@+id/fly"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center"
        android:background="@drawable/w_m_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/isweifu"
            android:layout_width="@dimen/dp95"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="@string/forworld"
            android:textColor="#ff7575"
            android:textSize="@dimen/sp13"
            android:visibility="gone"
             />
    </FrameLayout>
</android.support.v7.widget.CardView>