<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp16">
    <TextView
        android:id="@+id/tv_title_ChangeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"/>
    <TextView
        android:id="@+id/tv_time_ChangeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_ChangeDetail"
        android:layout_alignLeft="@id/tv_title_ChangeDetail"
        android:layout_alignStart="@id/tv_title_ChangeDetail"
        android:layout_marginTop="@dimen/dp6"/>
    <TextView
        android:id="@+id/tv_amount_money_ChangeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/sp15"/>
</RelativeLayout>