<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.md.jsyxzs_cn.zym_xs.fragments.LineDetectionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dp"
            android:layout_marginRight="@dimen/common_dp"
            android:layout_marginTop="@dimen/common_dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <com.md.jsyxzs_cn.zym_xs.custom_views.spinner.NiceSpinner
                    android:id="@+id/spinner_choose_website"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/xljc_choose_website_shape"/>
                <ImageView
                    android:id="@+id/iv_expand"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/little_padding"
                    android:src="@drawable/expand"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_reset_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_dp"
                android:background="@drawable/xljc_reset_line_backgroundcolor_selector">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_reset_line"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/xljc_reset_line"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xljc_reset_line"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/common_dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_xljc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.md.jsyxzs_cn.zym_xs.custom_views.RotateLoading
                android:id="@+id/rotateloading"
                android:visibility="invisible"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/loading_background_shape"
                app:loading_color="@color/white"
                app:loading_speed="11"
                app:loading_width="5dp"/>
            <TextView
                android:id="@+id/tv_xljc_error_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/wujilu"
                android:text="@string/xljc_lianjie_timeout"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_net_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/common_dp"
                    android:src="@drawable/loodingfial"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/noclick_yueri_text_color"
                    android:textSize="@dimen/text_input_size"
                    android:text="@string/net_status_error"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/noclick_yueri_text_color"
                    android:textSize="@dimen/text_input_size"
                    android:text="@string/net_status_error_setting_or_loading"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_net_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_setting"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:textSize="@dimen/common_text_size"
                        android:clickable="true"
                        android:textColor="@drawable/net_error_settting_textcolor_selector"
                        android:background="@drawable/net_error_settting_selector"/>
                    <TextView
                        android:id="@+id/tv_reloading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/net_error_loading_selector"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:textColor="@drawable/net_error_loading_textcolor_selector"
                        android:textSize="@dimen/common_text_size"
                        android:clickable="true"
                        android:text="@string/net_reloading"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
