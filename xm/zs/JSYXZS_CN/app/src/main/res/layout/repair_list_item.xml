<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_repair_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/little_padding"
    android:layout_marginRight="@dimen/little_padding"
    android:layout_marginTop="@dimen/little_padding"
    android:background="@drawable/repair_item_noclick_shape"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_repair_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/little_padding"
        android:layout_marginBottom="@dimen/little_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reapir_item_time_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2016"
                android:textColor="@color/noclick_year_text_color"
                android:textSize="@dimen/text_input_size"/>

            <TextView
                android:id="@+id/reapir_item_time_yueri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="12/15"
                android:textColor="@color/noclick_yueri_text_color"
                android:textSize="@dimen/common_text_size"/>

            <TextView
                android:id="@+id/reapir_item_time_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="16:34"
                android:textColor="@color/noclick_year_text_color"
                android:textSize="@dimen/text_input_size"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_repair_item_little_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/repair_item_white_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="@dimen/little_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:padding="3dp"
                        android:text="@string/reoair_item_id"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:padding="3dp"
                        android:text="@string/repair_item_network_address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/repair_item_repairno_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textSize="@dimen/little_text_size"
                            android:textColor="@color/deep_text_color"/>

                        <TextView
                            android:id="@+id/repair_item_network_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:textSize="@dimen/little_text_size"
                            android:textColor="@color/deep_text_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/reapir_item_zhankai"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_dp"
                        android:src="@drawable/zhankai"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_repair_item_content"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="@string/repair_item_problem_type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>
                    <TextView
                        android:id="@+id/repair_item_problem_type"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="@dimen/little_text_size"
                        android:textColor="@color/deep_text_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="@string/repair_item_deal_state"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>
                    <TextView
                        android:id="@+id/repair_item_deal_state"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="@dimen/little_text_size"
                        android:textColor="@color/deep_text_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="@string/repair_item_problem_describe"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>
                    <TextView
                        android:id="@+id/repair_item_content"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="@dimen/little_text_size"
                        android:textColor="@color/deep_text_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="@string/repair_item_replycontent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_text_size"/>
                    <TextView
                        android:id="@+id/repair_item_replycontent"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="@dimen/little_text_size"
                        android:text="@string/repair_item_no_replycontent"
                        android:textColor="@color/deep_text_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>